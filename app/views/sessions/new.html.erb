<%= render 'share/page_title', title: "Login" %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
            <div class="form-group" align = "center">
                <div class="col-md-4 col-md-offset-4" >
                    <%= f.email_field :email, class: "form-control", placeholder: "Your email"%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-md-offset-4">
                    <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
                </div>
            </div>
            <div class="form-group">
                <div class="center">
                    <%= f.submit "Login", class: "btn btn-primary btn-lg btn-xlarge nutsignup"%>
                </div>
                <div class="center donthaveaccount">
                    Don't have a account, <%= link_to "Sign up here", signup_path %>
                </div>
            </div>
        <%end%>
    </div>
</div>