<%= render 'share/page_title', title: 'listing all Recipes' %>

<% @recipes.each do |recipe| %>
<div class="row">
    <div class="col-md-2 col-md-offset-1">
        <section class="chef_info center">
            <%= gravatar_for(recipe.chef, size: 120) %>
        </section>
    </div>
    <div class="col-md-8 well ">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= truncate(recipe.description,length: 150) %></p>
        <p>
            <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago | Updated <%= time_ago_in_words(recipe.updated_at) %> ago</small></span>
        </p>
    </div>
</div>
<%end%>